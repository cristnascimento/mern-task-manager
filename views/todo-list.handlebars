<div class="container col-md-8" >
        <br/>
        <h3>List of contacts</h3><br/>
        <form method="POST" action="/list/todo">
          <div class="form-row">
              <input type="text" class="form-control col-md-6 ml-1" id="description" name="description"
               value="{{contact.firstName}}" {{readonly}} placeholder="Type your new item">
            
            <button type="submit" class="btn btn-primary ml-1 col-md-2">Add</button>
          </div>
        </form>
        <br/>

            <table class="table table-striped table-hover">
              <thead class="thead-dark">
                <tr class="row">
                  <th scope="col" class="col-sm-1">#</th>
                  <th scope="col" class="col-sm-7">Description</th>
                  <th scope="col" class="col-sm-4">Action</th>
                </tr>
              </thead>
              <tbody>
                {{#data}}
                <tr class="row">
                  <th class="col-sm-1">{{id}}</th>
                  <td class="col-sm-7">{{description}}</td>
                  <td class="col-sm-4">
                    <a class="btn btn-success" href="/contact/view/{{id}}" role="button">View</a>
                    <a class="btn btn-warning" href="/contact/edit/{{id}}" role="button">Edit</a>
                    <a class="btn btn-danger" href="/contact/delete/{{id}}" role="button">Remove</a>
                  </td>
                </tr>
                {{/data}}
              </tbody>
            </table>
  </div>
